FROM dsegura97/nginx

RUN apt update && apt install -yq --no-install-recommends \
    curl \
    ca-certificates

# Instalar Node 20 (controlando versi√≥n)
RUN curl -fsSL https://deb.nodesource.com/setup_20.x | bash - \
    && apt install -y nodejs \
    && npm install -g npm@latest

RUN mkdir -p /root/admin/node
RUN mkdir -p /root/admin/node/proyectos/iawprojects
WORKDIR /root/admin/node
COPY ./proyectos/ppokenest/pokenest/ /root/admin/node/proyectos/iawprojects

COPY ./dockerfiles/nodejsnest/admin/start.sh .
RUN chmod +x /root/admin/node/start.sh

ENTRYPOINT [ "./start.sh" ]